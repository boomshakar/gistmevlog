<div class="contain-flu-reg" id="contain-flu">
  <div class="forms-container-reg">
    <div class="signin-signup-reg">
      <form
        action="/users/register"
        class="sign-up-form"
        autocomplete="off"
        novalidate
        method="POST"
      >
        <h2 class="title" id="registerme" name="registerme">Sign Up</h2>
        <%- include('./partials/messages') %>
        <div class="input-field">
          <i class="fas fa-user"></i>
          <input
            type="text"
            name="firstname"
            placeholder="First Name"
            value="<%= typeof firstname != 'undefined' ? firstname : ''%>"
          />
        </div>
        <div class="input-field">
          <i class="fas fa-user-friends"></i>
          <input
            type="text"
            name="lastname"
            placeholder="Last Name"
            value="<%= typeof lastname != 'undefined' ? lastname : ''%>"
          />
        </div>
        <div class="input-field">
          <i class="fas fa-id-badge"></i>
          <input
            type="text"
            name="username"
            placeholder="Username"
            value="<%= typeof username != 'undefined' ? username : ''%>"
          />
        </div>
        <div class="input-field">
          <i class="fas fa-envelope"></i>
          <input
            type="text"
            name="email"
            placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : ''%>"
          />
        </div>
        <div class="input-field">
          <i class="fas fa-lock"></i>
          <input
            type="password"
            name="password"
            placeholder="Password"
            value="<%= typeof passsword != 'undefined' ? passsword : ''%>"
          />
        </div>
        <div class="input-field">
          <i class="fas fa-user-lock"></i>
          <input
            type="password"
            name="password2"
            placeholder="Confirm Password"
            value="<%= typeof passsword2 != 'undefined' ? passsword2 : ''%>"
          />
        </div>
        <input type="submit" value="Sign Up" class="btn solid" />
        <!-- <button type="submit" class="btn solid">Sign Up</button> -->

        <p class="social-text">or Sign up with ðŸ‘‡</p>
        <div class="social-media">
          <a href="/auth/google" class="social-icon">
            <i class="fab fa-google"></i
          ></a>
        </div>
      </form>
    </div>
  </div>
  <div class="panels-container-reg">
    <div class="panel right-panel">
      <div class="content">
        <h3>One of us ?</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
          laboriosam ad deleniti.
        </p>
        <a href="/users/login" class="btn transparent" id="sign-in-btn"
          >Sign in</a
        >
      </div>
      <img src="/img/auth.svg" class="image" alt="" />
    </div>
  </div>
</div>
<script>
  // login / signup
  // signin-signup
  const sign_in_btn = document.querySelector("#sign-in-btn");
  const sign_up_btn = document.querySelector("#sign-up-btn");
  const container = document.querySelector(".contain-flu");

  sign_up_btn.addEventListener("click", () => {
    container.classList.add("sign-up-mode");
  });

  sign_in_btn.addEventListener("click", () => {
    container.classList.remove("sign-up-mode");
  });
</script>
